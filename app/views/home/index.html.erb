<% content_for(:header) do %>
  <script>
    function gotoGame(game_id) {
      window.location += 'games/'+game_id;
      return false
    }
    <% if !logged_in? %>
    Event.observe(window, 'load', function() {
      Form.focusFirstElement('address_form');
    });
    <% end %>
  </script>
  <style>
  <!--
  #features { font-size: 1.5em;  }
  #features li { padding: 1em; }
  //-->
  </style>
<% end %>

<h2>We will help you find...</h2>

<ul id="features">
  <li class="box center span-7 column">Arcades where you want</li>
  <li class="box center span-7 column">Games you want to play</li>
  <li class="box center span-7 right">Players to hang out with</li>
</ul>

<% if !logged_in? %>
  <fieldset class="clear">
    <legend>Enter your address to get started</legend>
      <% form_tag(addresses_path) do %>
        <p class="block">
          <%= text_field_tag :address, addressed_in? ? current_address.single_line : '', { :class => 'text' } %>  
          <%= submit_tag "Find!", :class => 'inline', :disable_with => 'Finding...' %>
        </p>
      <% end %>
  </fieldset>
<% end %>