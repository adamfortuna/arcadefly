<% title @profile.display_name + separator + " Compose New Message" -%>

<%= render :partial => 'profiles/menu', :locals => { :profile => @profile } %>
<% tabbed_box do %>
  <h1><%= @title %></h1>

  <div>
  	<% form_for :message, :url => messages_path do |f| %>
  	  <p class="block required">
  	    <label for="">To:</label>
  	    <%= f.select :receiver_id, @profile.friends.collect { |friend| [friend.display_name, friend.id] } %>
  	    <%= #f.text_field :receiver_id, :class => 'text'  
  	    %>
  	  </p>
  	  
  	  <p class="block required">
  	    <label for="">Subject:</label>
  	    <%= f.text_field :subject, :class => 'text'  %>
  	  </p>

  	  <p class="block required">
  	    <label for="">Mesasage:</label>
  	    <%= f.text_area :body, :class => 'text' %>
  	  </p>

    	<div class="row button">
    	  <%= submit_tag 'Send Message', :class=>'button' %>
    	</div>
  	<%end %>
  </div>  
<% end %>