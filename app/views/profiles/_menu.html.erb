<ul class="tabs">
  <%= nav_link "#{profile.display_name}'s Profile", profile_path(profile), { :a_class => 'users' } %>
  <%= nav_link "Favorite Arcades", profile_arcades_path(profile), { :a_class => 'arcades' } %>
  <%= nav_link "Favorite Games", profile_games_path(profile), { :a_class => 'games' } %>
  <%= nav_link "Friends", profile_friends_path(profile), { :a_class => 'users' } %>

  <% if me -%>
  <%= nav_link 'Messages', profile_messages_path(profile), { :a_class => 'users', :li_class => 'right' } %>
  <%= nav_link 'Edit Profile', edit_profile_path(profile), { :a_class => 'users', :li_class => 'right' } %>
  <% end %>
</ul>
<div id="profile_<%= @profile.id %>"></div>