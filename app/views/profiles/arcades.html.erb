<% title @profile.display_name + separator + 'Favorite Arcades' -%>

<%= render :partial => 'profiles/menu', :locals => { :profile => @profile, :map => true } %>

<% tabbed_box do %>
  <h1><%= @title %></h1>
  <%- if @arcades.length > 0 -%>
    <%= render :partial => 'arcades/arcades', :object => @arcades %>
  <%- else -%>
    <p><%= @profile.display_name %> doesn't have any favorite arcades.</p>
  <%- end -%>
<% end %>