<li class="<%= cycle("even","odd")%> clear">

  <span style="width:280px;" class="left clear">
    <%= link_to(profile_map.display_name, profile_path(profile_map)) %>
  </span>
  
  <span style="width:50px;" class="right">
    <a href="#" onclick="profile_group.showMarker('<%= profile_map.permalink %>');return false;">Show Â»</a>
  </span>
  
  <div class="clear soft">
  	<div class="left">
      <%= #render :partial => 'profiles/favorite', :locals => { :show_text => false, :arcade => arcade } if logged_in? 
      %>
      <p><%= profile_map.address.shortest_line -%></p>
  	</div>
  	
