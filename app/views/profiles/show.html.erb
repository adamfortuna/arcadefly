<%- title "Profile for #{@profile.display_name}" -%>
<h2><%= icon @profile %> <%= "Profile for #{@profile.display_name}" %></h2>

<% content_for :head do  -%>
<%= auto_discovery_link_tag :rss, formatted_profile_url(@profile, :rss), :title=>"#{@profile.display_name}'s recent activity" %>
<% end -%>

<%= render :partial => 'menu', :locals => { :profile => @profile} %>

<%
can_send = logged_in?
%>
<div id="sub_nav">
<%= link_to( 'Edit this page', edit_profile_path(current_user.profile)) if me %>
</div>
<div class="left" id="column_l">
  
  <%= render :partial => 'profiles/bio' %>
  <div class="clear"></div>  
  <%= render :partial => 'comments/list', :locals => {:with_form => true, :with_wall_to_wall => true} %>	
  <%- if @video -%>
  <div class="activity_box">
    <h2>Latest YouTube Video</h2>
    <%= @video.embed_html %>
  </div>
  <%- end -%>

  <% if @flickr %>  
  <div class="activity_box">
    <h2>Latest Flickr Pictures</h2>
    <% @flickr.each do |flickr|%>
    <div class="flickr left">
      <div>
        <a href="http://www.flickr.com/photos/<%= flickr.owner_id %>/<%= flickr.id %>" target="_blank">
          <%= image_tag flickr.url('t'), :alt => 'FlickrHolder', :class => 'flickr_image' %>
        </a>
      </div>
    </div>
    <%end%>
  </div>
  <% end %>



  <%- if can_send -%>
  <div id="new_direct_message" class="hidden">
    <%= render :partial => 'messages/form', :locals => {:hide_header => true} %>
  </div>
  <%- end -%>

  <div class="clear"></div>
</div>

<div class="right" id="column_r">
  <ul>
    <%- if logged_in? &&!me -%>
	    <li><%= get_friend_link current_user.profile, @profile %></li>
	    <%- if can_send -%>
	    <li><%= inline_tb_link 'Direct Message', "new_direct_message", {:title => "New Message To #{h @profile.full_name}"}, {:height => 380} %></li>
	    <li><%= inline_tb_link 'Leave a Comment', "new_comment", {:title => "Leaving A Comment On #{h @profile.full_name}'s Wall"}, {:height => 330, :width => 430} if logged_in? %></li>
	    <%- end -%>
	    <%- if can_send && !me && current_user.profile.has_wall_with(@profile) -%>
	    <li><%= link_to 'Our Wall-to-Wall', profile_comments_path(@profile) %></li>
	    <%- end -%>
	<%- end -%>
  </ul>
  <%= render :partial => 'friends/list', :locals => {:type => 'friends'} %>
  <%= render :partial => 'friends/list', :locals => {:type => 'followers'} %>
  <%= render :partial => 'friends/list', :locals => {:type => 'followings'} %> 
</div>