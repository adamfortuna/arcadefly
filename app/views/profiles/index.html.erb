<% title "Players #{separator + params[:search] unless params[:search].blank?}" %>

<% box do %>
  <h2><%= @title %></h2>
  
  <div id="controller_search">
    <% form_for(:profile, profiles_path, :html => { :method => 'get' }) do |f| %>
      <label id="search_label" for="search">Search for a profile...</label>
      <%= text_field_tag :search, '', { :class => 'text', :onfocus => 'toggleLabel(false);', :onblur => 'toggleLabel(true);' } %>  
      <%= submit_tag "Search!", { :disable_with => 'Searching...', :class => 'inline' } %>
    <% end %>
  </div>

  <%= render :partial => 'shared/letters', :locals => { :controller => 'profiles' } %>

  <div<%= ' class="right-space"' if logged_in? %>>
    <ul class="data">
      <%= render :partial => 'profile', :collection => @profiles %>
    </ul>

    <p>
      <%= will_paginate @profiles %>
    </p>
  </div>

<% end %>