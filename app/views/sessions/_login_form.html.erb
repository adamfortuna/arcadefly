  <fieldset>
    <legend>Login</legend>
    <% form_tag sessions_path, :id => 'login_form'  do -%>
    <p class="block">
      <label for="login">Login</label>
      <%= text_field_tag 'login', '', { :class => 'text' } %>
    </p>
    
    <p class="block">
      <label for="password">Password</label>
      <%= password_field_tag 'password', '', { :class => 'text' } %>
    </p>
    
    <p>
      <%= check_box_tag 'remember_me' %> <label for="remember_me">Remember me</label>
    </p>
    
    <p class="block"><%= submit_tag 'Log in', { :class => 'button', :disable_with => 'Logging in...' } %></p>
    <% end -%>
  </fieldset>