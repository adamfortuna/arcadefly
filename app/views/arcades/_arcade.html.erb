<li class="<%= cycle("even","odd")%>">
	<ul class="left-shift admin">
		<li><%= link_to 'Edit', edit_arcade_path(arcade), :class => 'admin' %></li>
    <li><%= link_to 'Destroy', arcade_path(arcade), :class => 'admin', :confirm => 'Are you sure?', :method => :delete %></li>
  </ul>

	<%= link_to(arcade.name, arcade_path(arcade), :class => 'main') %>

	<span class="count"> in 
	  <strong><%= arcade.address.city %>, <%= arcade.address.region.name %></strong>
	  has <%= pluralize(arcade.playables_count, "game") %>
	  <% if logged_in? &&  current_user.has_address? -%>
	    and is <%= arcade.address.distance_to(current_user.address).round_to(2) %> miles away
	  <% end %>
	  
	  <% if logged_in? %>
  	<span class="favorite">
  	  <% if current_user.arcades.include?(arcade) %>
  	    <%= link_to "&nbsp;", arcade_favorite_path(arcade), { :method => "delete", :class => "favorite_delete" } %>
  	  <% else %>
        <%= link_to "&nbsp;", arcade_favorite_path(arcade), { :method => "post", :class => "favorite_add" } %>
  	  <% end %>
  	</span>
  	<% end %>
	</span>
	
	<% if @playables_count %>
	<span class="index" style="width: <%= (arcade.playables_count/@playables_count)*100 %>%">(<%= ((arcade.playables_count/@playables_count)*100) %>%)</span>
  <% end %>
</li>